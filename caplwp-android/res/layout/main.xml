<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_height="wrap_content"
              android:layout_width="fill_parent"
              android:padding="40dp"
              android:textAlignment="center"
              android:orientation="vertical"
        >

    <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/imageView" android:layout_gravity="center" android:background="@drawable/ic_launcher"
            android:layout_marginLeft="20dp" android:layout_marginRight="20dp" android:layout_marginBottom="20dp"/>
    <Button
            android:layout_width="fill_parent"
            android:layout_gravity="fill_horizontal"
            android:layout_height="wrap_content"
            android:text="Einstellungen"
            android:id="@+id/settings"
            android:onClick="showSettings"/>
    <Button
            android:layout_width="fill_parent"
            android:layout_gravity="fill_horizontal"
            android:layout_height="wrap_content"
            android:text="Wallpaper setzen"
            android:id="@+id/choose"
            android:onClick="setWallpaper"
            />
</LinearLayout>